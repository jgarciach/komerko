<div class="section">
    <h2 class="section-title">Blends</h2>
    <div class="items">
        <% @items.each do |item| %>
            <div class="item">
                <div class="image">
                    <img class="item-image" style="-webkit-user-select: none" src="http://placehold.it/160">
                </div>    
                <h3 class="item-name">
                    <%= item.name %>
                </h3>
                <span class="item-price">$<%= item.price %></span>
                <div class="item-content">
                    <p class="item-description"><%= item.description %></p>
                </div> 
            </div>
        <% end %>
    </div>
</div>
<%= stylesheet_link_tag '/assets/store.css' %>
