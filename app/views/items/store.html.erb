<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Add to Cart</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.price %></td>
                <td>
                    <%= form_for :cart_item, url: '/cart_items', method: :post, remote: true do |f| %>
                        <%= f.hidden_field :item_id, value: item.id %>
                        <%= f.text_field :quantity %>
                        <%= f.submit "Add to Cart" %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

