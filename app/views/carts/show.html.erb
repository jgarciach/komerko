<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <% item = cart_item.item %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td>
          <%= form_for(cart_item) do |f| %>
            <%= f.number_field :quantity, class: "input-mini item-quantity" %>
            <br />
            <%= f.submit "Update", class: "update-item-quantity" %>
          <% end %>
        </td>
        <td>
            <%= link_to( 
                cart_item_path(cart_item),
                method: :delete,
                data: { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                class: 'btn btn-mini btn-danger remove-from-cart') do %>
                      <icon class='icon-trash'></icon>         
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td></td><td></td>
      <td>Total</td>
      <td><%= number_to_currency(@cart.total) %></td>
    </tr>
  </tfoot>
</table>


<%= link_to 'Back to Store', store_items_path %>
<%= link_to 'Checkout', new_order_path %>
