<p id="notice"><%= notice %></p>

<h2><%= @business.name %></h2>
<%= link_to 'Go to Store', store_business_path(@business), class: "btn btn-small" %>

<p>
  <b>Email:</b>
  <%= @business.email %>
</p>

<p>
  <b>Phone:</b>
  <%= @business.phone %>
</p>

<b>Items:</b>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Created At</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.id, item_path(item) %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%=l item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_item_path(item), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      item_path(item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add an Item', new_item_path, class: "btn btn-small" %>
<%= link_to 'Edit', edit_business_path(@business), class: "btn btn-small" %>
<%= link_to 'Back', businesses_path, class: "btn btn-small"%>
