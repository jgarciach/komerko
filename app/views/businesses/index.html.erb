<h2 class="businesses-title"><i class="icon-briefcase"></i> Businesses <span class="arrow"></span> </h2>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th></th>
  </tr>

<% @businesses.each do |business| %>
  <tr>
    <td><%= business.name %></td>
    <td><%= business.email %></td>
    <td><%= business.phone %></td>
    <td>
      <%= link_to 'Show', business %>
      <%= link_to 'Edit', edit_business_path(business) %>
      <%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Business', new_business_path %>
