<h2>
  Order #<%= @order.id%>
  <small>Placed <%= @order.created_at %></small>
</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |order_item| %>
      <% item = order_item.item %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= order_item.price_paid_per_unit %></td>
        <td><%= order_item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <b>Order type:</b>
  <%= @order.order_type %>
</p>
<%= link_to 'Back to Store', store_items_path %>
