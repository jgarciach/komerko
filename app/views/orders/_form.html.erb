<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :order_type %>
    <%= f.radio_button :order_type, 'pickup', checked: true %>
    <%= label :order_order_type, 'pickup' %>
    <%= f.radio_button :order_type, 'delivery' %>
    <%= label :order_order_type, 'delivery' %>
  </div>
  <%= fields_for @user do |u| %>
    <%= devise_error_messages! %>
    <div><%= u.label :first_name %><br />
    <%= u.text_field :first_name %></div>

    <div><%= u.label :last_name %><br />
    <%= u.text_field :last_name %></div>

    <div><%= u.label :email %><br />
    <%= u.email_field :email %></div>

    <div><%= label "Registrarme", :create_account? %><br />
    <%= check_box_tag "user", :create_account? %></div>

    <div><%= u.label :password %><br />
    <%= u.password_field :password %></div>

    <div><%= u.label :password_confirmation %><br />
    <%= u.password_field :password_confirmation %></div> 

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
